RewriteEngine Off

# PHP limits are now configured in .user.ini
# (Compatible with FastCGI/FPM on cPanel PHP 8.3+)

# Cache control for images
<FilesMatch "\.(jpg|jpeg|png|gif|webp|ico)$">
    Header set Cache-Control "max-age=2592000, public"
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Prevent PHP execution in uploads directory (security)
<FilesMatch "\.(php|phtml|php3|php4|php5|phps)$">
    Deny from all
</FilesMatch>
